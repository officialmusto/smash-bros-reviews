<%- include('./partials/html-head') %> <%- include('./partials/nav') %>

    <main>
      <h1>Super Smash bros. Reviews</h1>
      <h2>
        Make sure to write a review, <%= user ? user.profile.name : "friend!" %>
      </h2>
      <% if (user?.profile.avatar) { %>
        <div>
          <img class="google" id="profile-picture" src="<%= user.profile.avatar %>"
            alt="<%= user.profile.name %> avatar" />
        </div>
        <% } %>
          <a href="/characters">
            <button id="character-select-button">Select Your Character</button>
          </a>
    </main>

    <%- include('./partials/footer') %>