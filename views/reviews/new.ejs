<%- include('../partials/html-head') %> <%- include('../partials/nav') %>

    <main>
      <% if (user) { %>
        <h1>
          <%= title %>
        </h1>
        <h2>
          <%= character.name %>
        </h2>
        <form id="new-form" action="/characters/<%= character._id %>/reviews" method="POST">
          <label>
            <textarea name="content" id="title-input" rows="6" cols="50"
              placeholder="Write your review here..."></textarea>
          </label>  
          <br />
          <br />
          <button id="add-review-btn">Add Review!</button>
        </form>
        <% } else { %>
          <h1>Please log in to write a review.</h1>
          <% } %>
    </main>

    <%- include("../partials/footer") %>