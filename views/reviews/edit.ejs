<%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>

    <main>
      <% if (user) { %>
        <h1>
          <%= title %>
        </h1>
        <h2>
          <%= character.name %>
        </h2>
        <form id="new-form" action="/characters/<%= character._id %>/reviews/<%= review._id %>?_method=PUT"
          method="POST">
          <label>
            <textarea name="content" id="title-input" rows="6" cols="50">
              <%= review.content %></textarea>
          </label>
          <br />
          <br />
          <button id="update-button">Update</button>
        </form>
        <% } else { %>
          <h1>Please log in to write a review.</h1>
          <% } %>
    </main>

    <%- include("../partials/footer") %>